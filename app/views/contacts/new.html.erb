<div class="container">
  <h2>Contactez-moi</h2>

  <%= form_with(url: contacts_path, method: :post, local: true) do |form| %>
    <div class="form-group mb-3">
      <%= form.label :name, "Votre nom" %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :email, "Votre email" %>
      <%= form.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :message, "Votre message" %>
      <%= form.text_area :message, class: "form-control", rows: 5, required: true %>
    </div>

    <div class="form-group">
      <%= form.submit "Envoyer", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
